[module/date]
type = internal/date
date = %b %d
time = %I:%M %p
label = %date%  %{B#90050505}  %time%
#                  ^^^^^^^^^ colors.altbg2
label-background = ${colors.altbg}
label-padding = 2
interval = 30

[module/ip]
type = custom/script
exec = printf "%-15s" "$(curl -s https://api.ipify.org)"
click-left = bspc rule -a xterm-256color -o desktop="^8" follow=on; st ~/Coding/Scripting/public/print-ip.sh
label-font = 3
tail = true
interval = 60

[module/alsa]
type = internal/alsa
format-volume = %{A:pavucontrol &:}<bar-volume>%{A} <ramp-volume>

label-muted = 

