[module/date]
type = internal/date
date = %b %d
time = %I:%M %p
label = %date%  %{B#90050505}  %time%
#                  ^^^^^^^^^ colors.altbg2
label-background = ${colors.altbg}
label-padding = 2
interval = 30

[module/ip]
type = custom/script
exec = ./ip.sh
click-left = bspc rule -a xterm-256color -o desktop="^8" follow=on; st ~/Coding/Scripting/public/print-ip.sh &
click-right = kill -USR1 %pid%
double-click-left = kill -USR2 %pid%
label-font = 3
tail = true

[module/alsa]
