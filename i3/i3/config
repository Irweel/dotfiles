exec --no-startup-id ~/.dotfiles/timer.sh ~/.dotfiles/i3/lock.sh
exec_always --no-startup-id ~/.screenlayout/default.sh && feh --bg-fill /usr/share/archlinux/wallpaper/archlinux-firestarter.jpg

# Keybinds

bindsym $mod+Pause exec "i3-nagbar -t warning -m 'You pressed the shut down button' -b 'No shit, Sherlock' 'systemctl poweroff'"

bindsym $mod+Print       exec --no-startup-id ~/.dotfiles/screenshot.sh window
bindsym $mod+Shift+Print exec --no-startup-id ~/.dotfiles/screenshot.sh region
bindsym Print            exec --no-startup-id ~/.dotfiles/screenshot.sh screen
bindsym Ctrl+Print       exec --no-startup-id ~/.dotfiles/screenshot.sh wait

bindsym $mod+Shift+l exec --no-startup-id "echo -ne '\x2' | socat - UNIX-CONNECT:/tmp/xidlehook.sock"
bindsym $mod+shift+f exec --no-startup-id keepassxc

bindsym --release $mod+bracketleft exec --no-startup-id xdotool type "å"
bindsym --release $mod+apostrophe  exec --no-startup-id xdotool type "ä"
bindsym --release $mod+semicolon   exec --no-startup-id xdotool type "ö"
bindsym --release $mod+shift+s exec --no-startup-id xdotool key U00AF && xdotool type "\\_(" && xdotool key U30C4 && xdotool type ")_/" && xdotool key U00AF
bindsym --release $mod+z exec --no-startup-id echo -n "​" | xclip -sel clip

bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 2%+ unmute && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 2%- unmute && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioMute        exec --no-startup-id amixer set Master toggle && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

